{
  "name": "graphql-typegraphql-crud",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "build": "tsc -p tsconfig.prod.json",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest unit",
    "test:integration": "dotenv -e ./.env.test yarn generate:reset && dotenv -e ./.env.test jest int -i",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint --fix .",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:migration": "npx prisma migrate dev",
    "generate:reset": "npx prisma migrate reset --force",
    "prisma:studio": "npx prisma studio",
    "test:environment:docker": "yarn docker:up && yarn docker:test:run & yarn docker:down",
    "docker:up": "docker-compose up -d --build",
    "docker:down": "docker compose down",
    "docker:test:run": "docker exec server ./bin/wait-for-it.sh db:5432 -- yarn test"
  },
  "dependencies": {
    "@prisma/client": "^3.5.0",
    "@types/graphql-fields": "^1.3.4",
    "apollo-graphql": "^0.9.3",
    "apollo-server": "^3.5.0",
    "class-validator": "^0.13.2",
    "dotenv-cli": "^4.0.0",
    "dotenv-safe": "^8.2.0",
    "graphql": "^15.8.0",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.13.6",
    "graphql-type-json": "^0.3.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.11.12",
    "@types/ws": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "jest-mock-extended": "^1.0.18",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "prisma": "^3.5.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typegraphql-prisma": "^0.18.2",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
